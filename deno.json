{
  "name": "openclaw",
  "version": "0.1.0",
  "tasks": {
    "start": "DENO_TLS_CA_STORE=system deno run -A src/main.ts",
    "dev": "DENO_TLS_CA_STORE=system deno run -A --watch src/main.ts",
    "test": "DENO_TLS_CA_STORE=system deno test -A tests/"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.19",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.6",
    "hono": "npm:hono@^4",
    "hono/cookie": "npm:hono@^4/cookie",
    "hono/logger": "npm:hono@^4/logger"
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  }
}
